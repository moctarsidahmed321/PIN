{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nouvelles/Présentation</th>
                <th>Type</th>  
                <th>Date de creation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.nouvelles }}</td>
                <td>{{ page.type }}</td>
                <td>{{ page.dateCreation ? page.dateCreation|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path('page_show', {'id': page.id}) }}">voir</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Il n'existe pas de page</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_new') }}">Créer une nouvelle page</a>
{% endblock %}
