{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Nouvelles/Présentation</th>
                <td>{{ page.nouvelles }}</td>
            </tr>
            <tr>
                <th>Date de creation</th>
                <td>{{ page.dateCreation ? page.dateCreation|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    
    <a href="{{ path('page_edit', {'id': page.id}) }}" class="btn btn-outline-success">Modifier</a>
    <br>
    <a href="{{ path('page_index') }}" class="btn btn-outline-secondary mt-1">Retour à la liste</a>

    {{ include('page/_delete_form.html.twig') }}
{% endblock %}
