{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
    <h1>Programme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme.id }}</td>
            </tr>
            <tr>
                <th>Date et heure de début</th>
                <td>{{ programme.dateHeureDebut ? programme.dateHeureDebut|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date et heure de fin</th>
                <td>{{ programme.dateHeureFin ? programme.dateHeureFin|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col">
            <h5>Abonnés</h5>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in programme.users %}
                        <tr>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.email }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Pas d'inscrit !</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col">
            <h5>Intervenants</h5>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom Prénom</th>
                    <th>Sujet</th>
                </tr>
                </thead>
                <tbody>
                {% for intervenant in programme.intervenants %}
                    <tr>
                        <td>{{ intervenant.nickName }}</td>
                        <td>{{ intervenant.sujet }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas d'intervenant !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-1">&nbsp;</div>
    <a href="{{ path('programme_edit', {'id': programme.id}) }}" class="btn btn-outline-success">modifier</a>
    <br />
    <a href="{{ path('programme_index') }}"  class="btn btn-outline-secondary mt-1">Retour à la liste</a>
    {{ include('programme/_delete_form.html.twig') }}
{% endblock %}
